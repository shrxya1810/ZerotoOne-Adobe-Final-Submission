# Unified Document Intelligence Backend Environment Configuration

# === API Settings ===
API_TITLE="Unified Document Intelligence API"
API_VERSION="1.0.0"
HOST="0.0.0.0"
PORT=8000
DEBUG=false

# === Embedding Model Settings ===
# Options: multi-qa-mpnet-base-dot-v1 (default), all-MiniLM-L6-v2
EMBEDDING_MODEL="multi-qa-mpnet-base-dot-v1"
EMBEDDING_CACHE_SIZE=1000

# === Storage Paths ===
UPLOAD_DIR="./data/uploads"
FAISS_DIR="./data/faiss_data"
SQLITE_DB="./data/db.sqlite"
TEMP_DIR="./data/temp"

# === Search Settings ===
DEFAULT_TOP_K=5
MAX_TOP_K=50
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# === AI/LLM Settings ===
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL="gemini-2.5-flash"
GEMINI_MAX_TOKENS=8192
GEMINI_TEMPERATURE=0.1

# === Azure Speech Services (Optional) ===
# Get credentials from: https://portal.azure.com/
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=your_azure_region_here

# === Google Text-to-Speech (Optional) ===
# Path to Google Cloud service account JSON file
GOOGLE_TTS_CREDENTIALS=/path/to/credentials.json

# === TTS Settings ===
# Options: azure, google, local
TTS_PROVIDER=azure
AUDIO_SAMPLE_RATE=24000
AUDIO_FORMAT="mp3"

# === Session Settings ===
SESSION_TIMEOUT_HOURS=24
MAX_FILES_PER_SESSION=50
MAX_FILE_SIZE_MB=100

# === PDF Processing ===
PDF_EXTRACT_IMAGES=false
PDF_EXTRACT_TABLES=true
PDF_MIN_TEXT_LENGTH=50

# === Performance ===
MAX_CONCURRENT_UPLOADS=5
INDEX_BATCH_SIZE=100
CACHE_TTL_SECONDS=3600

# === Debug Settings ===
LOG_LEVEL="INFO"